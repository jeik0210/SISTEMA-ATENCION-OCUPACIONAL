<%= form_tag(create_patient_path, method: 'post', role: 'form', remote: true) do %>
<%= label_tag :paternal, 'Apellidos :'%>
<div class="row">
	<div class="col-md-6">
		<%= text_field :patient, :paternal ,placeholder: 'Paterno',  class: 'form-control' %>
	</div>
	<div class="col-md-6">
		<%= text_field :patient, :maternal ,placeholder: 'Materno',  class: 'form-control' %>
	</div>
</div>
