<div>
  <div class="row">
    <div class="col-md-1">
      <button class="btn btn-warning btn-sm"><%= link_to 'ATRAS', patients_path(page: 1), class: 'btn'%></button>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-1"></div>
